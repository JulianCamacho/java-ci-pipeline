<project name="javahelloworld" default="dist" basedir=".">
<description>
    Builds a Jar file to pack this artifact
  </description>
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist" location="dist"/>
  <property name="version" value="1.0"/>
  <property name="sonar.organization" value="juliancamacho341"/>
  <property name="sonar.projectKey" value="juliancamacho341"/>
  <property name="sonar.sources" value="."/>
  <property name="sonar.host.url" value="https://sonarcloud.io"/>
  <property name="sonar.login" value="d69bdf126c0ae2db31e960532dac88d855a59957"/>


  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init" description="compile the source">
    <javac srcdir="${src}" destdir="${build}"/>
  </target>

  <target name="dist" depends="compile" description="generate the distribution">
    <buildnumber/>
    <mkdir dir="${dist}"/>
    <jar destfile="${dist}/javahelloworld-${version}.${build.number}.jar" basedir="${build}"/>
  </target>

  <target name="clean" description="clean up">
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>

</project>